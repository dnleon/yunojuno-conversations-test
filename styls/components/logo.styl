/**
 * Logos - from YJ to third parties
 *
 * These uses classes generated by grunticon, which
 * produces SVG, PNG-data-uri and pure-PNG solutions
 */

:root {

    --yj-logo-extra-small-width: 28px;
    --yj-logo-extra-small-height: 33px;

    --yj-logo-small-width: 36px;
    --yj-logo-small-height: 42px;

    --yj-logo-submedium-width: 80px;
    --yj-logo-submedium-height: 92px;

    --yj-logo-medium-width: 94px;
    --yj-logo-medium-height: 108px;

    --yj-logo-large-width: 314px;
    --yj-logo-large-height: 360px;

    --yj-logo-no-content-width: 535px;
    --yj-logo-no-content-height: 600px;

}

.YJLogo {
  background-size: var(--yj-logo-medium-width) var(--yj-logo-medium-height);
  display: inline-block;
  height: var(--yj-logo-medium-height);
  text-indent: -9999px;
  width: var(--yj-logo-medium-width);
}

/*
 *
 * Logo colours are determined by the generated class based on the SVG source filename:
 * .icon-yj-logo-black
 * .icon-yj-logo-coral
 * .icon-yj-logo-white
 *
 */

.YJLogo--xSmall {
  background-position-y: 3px;
  background-size: calc(var(--yj-logo-extra-small-width) - 1) calc(var(--yj-logo-extra-small-height) - 3);
  height: var(--yj-logo-extra-small-height);
  width: var(--yj-logo-extra-small-width);
}

.YJLogo--small {
  background-size: var(--yj-logo-small-width) var(--yj-logo-small-height);
  height: var(--yj-logo-small-height);
  width: var(--yj-logo-small-width);
}

.YJLogo--subMedium--responsive {
  background-size: var(--yj-logo-submedium-width) var(--yj-logo-submedium-height);
  height: var(--yj-logo-submedium-height);
  width: var(--yj-logo-submedium-width);

  @media (--viewport-sm) {
    background-size: var(--yj-logo-small-width) var(--yj-logo-small-height);
    height: var(--yj-logo-small-height);
    width: var(--yj-logo-small-width);
  }
}

.YJLogo--large {
  background-size: var(--yj-logo-large-width) var(--yj-logo-large-height);
  height: var(--yj-logo-large-height);
  width: var(--yj-logo-large-width);

  @media (--viewport-sm) {
    background-size: var(--yj-logo-medium-width) var(--yj-logo-medium-height);
    height: var(--yj-logo-medium-height);
    width: var(--yj-logo-medium-width);
  }
}

.YJLogo--noContent {
  background-size: contain;
  height: var(--yj-logo-no-content-height);
  width: 90%;

  @media (--viewport-sm) {
    background-size: contain;
    height: calc( var(--yj-logo-no-content-height) / 5 * 2);
    width: 90%;
  }
}

.YJLogo--transparent {
    opacity: .55;
}

.YJLogo--muted--lots {
  opacity: 0.1;
}
