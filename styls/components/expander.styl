}

/**
* --conversation
*
* Expander for buttons on a Freelancer Contract page
*/

.Expander--conversation {

  p{margin:var(--space-micro) 0 0 0}

  .Expander-header {
    justify-content: center;
  }

  .Expander-content {
    width: 100% !important;
  }
}
